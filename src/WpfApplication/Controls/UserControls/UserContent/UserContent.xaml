<UserControl x:Class="WpfApplication.UserControls.UserContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApplication">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:UserNavBar x:Name="navBar" Grid.Row="0" Controls="{Binding NavBar.Controls, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <TextBlock Text="User" Grid.Row="1" />
    </Grid>
</UserControl>

